<UserControl x:Class="IndividualWork3.View.UserControls.Task5UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndividualWork3.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             FontFamily="Comic Sans Ms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/DMC.jpg"
               Grid.RowSpan="2"
               Stretch="UniformToFill"/>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="70"
                Width="450"
                Background="Gray"
                CornerRadius="15"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <TextBlock Text="Задание 5 - Вычислить факториал заданного целого числа. Факториал числа N вычисляется по следующей формуле"
                       FontSize="17"
                       Margin="5 0 0 0"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"/>
        </Border>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Margin="0 0 0 100"
                Height="170"
                Width="400"
                CornerRadius="15"
                Background="Gray"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0 10 0 0">
                <StackPanel>
                    <TextBlock Text="Введите значения:"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AlphaN"
                                                 VerticalAlignment="Center"
                                                 Width="30"
                                                 Height="30"/>
                        <TextBox Width="250"
                                 x:Name="Tbn"
                                 IsReadOnly="False"
                                 FontSize="20"
                                 Margin="0 0 0 0"
                                 materialDesign:TextFieldAssist.UnderlineBrush="Black"/>
                    </StackPanel>
                </StackPanel>

                <Button Background="Transparent"
                        Foreground="Black"
                        Width="300"
                        Grid.Row="1"
                        Margin="0 10 0 0"
                        x:Name="BtnAnswer"
                        Click="BtnAnswer_Click" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="Red"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CarBrakeAbs"
                                                 Width="25"
                                                 Height="25"/>
                        <TextBlock Text="Вычислить"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>

                <StackPanel Margin="0 10 0 0">
                    <TextBlock x:Name="TbAnswer"
                               FontSize="20"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10 0 0 100"
                Width="50"
                Height="45"
                Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                Background="Red"
                ToolTip="Задание №4"
                Opacity="0.7">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Foreground="Black"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0 170 0 0"
                Width="50"
                Height="45"
                Style="{StaticResource MaterialDesignIconForegroundButton}"
                x:Name="BtnExit"
                Click="BtnExit_Click"
                Background="#00FF00"
                ToolTip="Выйти"
                Opacity="0.7">
            <materialDesign:PackIcon Kind="Cross"
                                     Foreground="Black"
                                     Width="30"
                                     Height="30"/>
        </Button>
    </Grid>
</UserControl>
