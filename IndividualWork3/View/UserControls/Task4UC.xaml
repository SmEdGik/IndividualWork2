<UserControl x:Class="IndividualWork3.View.UserControls.Task4UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndividualWork3.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             FontFamily="Comic Sans Ms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/DMC.jpg"
               Grid.RowSpan="2"
               Stretch="UniformToFill"/>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="65"
                Width="450"
                Background="Gray"
                CornerRadius="15"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <TextBlock Text="Задание 4 - Задан массив состоящий из 15 элементов вещественного типа. Определить количество элементов, значения которых больше первого элемента"
                       FontSize="15"
                       Margin="5 0 0 0"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"/>
        </Border>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Margin="0 0 0 100"
                Height="250"
                Width="400"
                CornerRadius="15"
                Background="Gray"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0 0 0 0">

                <StackPanel>
                    <TextBlock Text="Исходный массив:"
                               FontSize="20"
                               FontWeight="SemiBold"/>

                    <TextBox x:Name="TbFirstArray"
                             Width="300"
                             Foreground="Black"
                             FontSize="20"
                             TextWrapping="Wrap"
                             Margin="0 5 0 0"
                             materialDesign:TextFieldAssist.UnderlineBrush="Black"/>
                </StackPanel>
                
                <Button Background="Transparent"
                        Foreground="Black"
                        Width="300"
                        Grid.Row="1"
                        Margin="0 10 0 0"
                        x:Name="BtnAnswer"
                        Click="BtnAnswer_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonProgressAssist.Value="-1"
                        materialDesign:ButtonProgressAssist.IndicatorForeground="Red"
                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CardSearchOutline"
                                                 Width="25"
                                                 Height="25"/>
                        <TextBlock Text="Найти"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Button>

                <StackPanel Margin="0 10 0 0"
                            x:Name="SpCountNumber"
                            Visibility="Hidden">
                    <TextBlock Text="Количество элементов:"
                               FontSize="20"
                               FontWeight="SemiBold"/>

                    <TextBlock x:Name="TbFindNumber"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Margin="0 5 0 0"/>
                </StackPanel>
                
            </StackPanel>
        </Border>

        <Button Grid.Row="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="10 0 0 100"
                Width="50"
                Height="45"
                Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                Background="Red"
                ToolTip="Задание №3"
                Opacity="0.7">
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Foreground="Black"
                                     Width="30"
                                     Height="30"/>
        </Button>

        <Button Grid.Row="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 10 100"
                Width="50"
                Height="45"
                Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                Background="#00FF00"
                ToolTip="Задание №5"
                Opacity="0.7">
            <materialDesign:PackIcon Kind="ArrowRight"
                                     Foreground="Black"
                                     Width="30"
                                     Height="30"/>
        </Button>
    </Grid>
</UserControl>
