<UserControl x:Class="IndividualWork3.View.UserControls.MainUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndividualWork3.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             FontFamily="Comic Sans Ms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/DMC.jpg"
               Grid.RowSpan="2"
               Stretch="UniformToFill"/>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="0"
                Height="70"
                Width="550"
                CornerRadius="15"
                Background="Gray"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <TextBlock Text="Индивидуальная работа №2"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="35"
                       Foreground="Black"
                       FontWeight="SemiBold"/>
        </Border>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="1"
                Height="70"
                Margin="0 50 0 0"
                Width="410"
                CornerRadius="15"
                Background="Gray"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <TextBlock Text="Решение задач"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="40"
                       Foreground="Black"
                       FontWeight="SemiBold"/>
        </Border>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Height="55"
                Width="550"
                CornerRadius="15"
                Background="Gray"
                Opacity="0.8"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <StackPanel>
                <TextBlock Text="по дисциплине:"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Foreground="Black"
                           Margin="5 0 0 0"
                           FontWeight="Bold"/>

                <TextBlock Text="УП.01.01 Учебная практика.Основы программирования"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Width="600"
                           Foreground="Black"
                           Margin="5 0 0 0"
                           FontSize="18"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0 0 0 120"
                Width="50"
                Height="45"
                Style="{StaticResource MaterialDesignIconForegroundButton}"
                Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                Background="Gray"
                ToolTip="Перейти к заданиям"
                Opacity="0.8">
            <materialDesign:PackIcon Kind="ArrowRight"
                                     Foreground="Black"
                                     Width="30"
                                     Height="30"/>
        </Button>
    </Grid>
</UserControl>
